<Page x:Class="Burgerking_Kiosk.Pages.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Burgerking_Kiosk.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Payment">

    <Grid Background="White">
        <StackPanel Orientation="Horizontal">
            <Button
            x:Name="PaymentCardBtn"
            Width="100"    
            Height="50" 
            Content="카드"
            Click="PaymentCardBtn_Click"></Button>
            <Button
            x:Name="PaymentMoneyBtn"
            Width="100"    
            Height="50" 
            Content="현금"
            Click="PaymentMoneyBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
