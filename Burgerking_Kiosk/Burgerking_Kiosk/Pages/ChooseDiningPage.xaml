<Page x:Class="Burgerking_Kiosk.Pages.ChooseDiningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Burgerking_Kiosk.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseDiningPage">

    <Grid Background="White">
        <TextBlock Text="ChooseDiningPage"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button
            x:Name="DiningPlaceBtn"
            Width="100"    
            Height="50" 
            Content="매장식사"
            Click="DiningPlaceBtn_Click" />
            <Button
            x:Name="PaymentBtn"
            Width="100"    
            Height="50" 
            Content="포장하기"
            Click="PaymentBtn_Click" />
        </StackPanel>
        <Button x:Name="BackMainBtn"
                Width="100"    
                Height="50"
                Content="이전으로"
                Click="BackMainBtn_Click"/>

    </Grid>
</Page>
