<Page x:Class="Burgerking_Kiosk.Pages.DiningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Burgerking_Kiosk.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiningPage">

    <Grid Background="White">
        <TextBlock Text="DiningPage"></TextBlock>
        <StackPanel Orientation="Horizontal">
        <Button
            x:Name="PaymentBtn"
            Width="100"    
            Height="50" 
            Content="다음(결제)"
            Click="PaymentBtn_Click" />
        
        <Button x:Name="BackChooseDiningBtn"
                Width="100"    
                Height="50"
                Content="이전으로"
                Click="BackChooseDiningBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
