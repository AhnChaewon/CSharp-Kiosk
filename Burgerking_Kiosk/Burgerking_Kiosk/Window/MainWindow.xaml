<Window x:Class="Burgerking_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Burgerking_Kiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White" Width="1280">
            <Image x:Name="logo" 
                   Width="72"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Source="/Assets/burgerking_logo.png"/>
            <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0 0 120 0">
                <TextBlock x:Name="date" 
                               Text="Load..."
                               FontSize="15"
                               HorizontalAlignment="Center"/>
                <TextBlock x:Name="time" 
                               Text="Load..."
                               FontSize="15"
                               HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBox
                    x:Name="msgEdit"
                    Width="300"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"/>

                <Button
                    x:Name="msgSendBtn"
                    Width="50"
                    BorderBrush="Black"
                    Background="White"
                    Content="전송"
                    Click="msgSendBtn_Click"/>
            </StackPanel>
            
            <Image x:Name="homeBtn" 
                   Width="50"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top" 
                   Source="/Assets/home_icon.png"
                   MouseDown="homeBtn_MouseDown"/>
        </Grid>
        <Frame Name="frame" 
               Grid.Row="1" 
               NavigationUIVisibility="Hidden" 
               Source="/Pages/HomePage.xaml"/>
    </Grid>

</Window>