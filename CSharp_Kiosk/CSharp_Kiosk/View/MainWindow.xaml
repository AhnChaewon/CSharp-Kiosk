<Window x:Class="CSharp_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp_Kiosk"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <local:Main x:Name="MainControl"></local:Main>
        <local:Statistics x:Name="StatisticsControl" Visibility="Collapsed"></local:Statistics>
        <local:Order x:Name="OrderControl" Visibility="Collapsed"></local:Order>
        <local:ChooseDiningPlace x:Name="ChooseDiningPlaceControl" Visibility="Collapsed"></local:ChooseDiningPlace>
        <local:DiningPlace x:Name="DiningPlaceControl" Visibility="Collapsed"></local:DiningPlace>
        <local:Payment x:Name="PaymentControl" Visibility="Collapsed"></local:Payment>
        <local:PaymentCard x:Name="PaymentCardControl" Visibility="Collapsed"></local:PaymentCard>
        <local:PaymentMoney x:Name="PaymentMoneyControl" Visibility="Collapsed"></local:PaymentMoney>
        <local:FinishPayment x:Name="FinishPaymentControl" Visibility="Collapsed"></local:FinishPayment>
    </Grid>
</Window>
